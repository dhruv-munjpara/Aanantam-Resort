<script>
var menubtn=document.getElementById('menubtn');
var nava=document.getElementById('nava');
var menu=document.getElementById('menu');

nava.style.right== "-500px"

menubtn.onclick=function()
{
if(nava.style.right== "-500px")
{
nava.style.right="0";
menu.src="close.jpg";
}
else
{
nava.style.right="-500px";
menu.src="menuu.png";
}
}
</script>
